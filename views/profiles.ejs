<!DOCTYPE html>
<html>
  <head>
    <title><%= title1 %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" href="../images/favicon.png" type="image/png" sizes="16x16">
  </head>

  <body>

    <div id="container">

      <header>

        <div class="head-bar">
      
          <a href="<%= '/' %>">
            <div class="icon-tab">
              <div class="icon"></div> 
            </div>
          </a>

          <div class="head-menu">
            <div class="menu">

              <div class="dropbtn">
                <div class="i"></div>
                <div class="i"></div>
                <div class="i"></div>
              </div>

              <div class="dropdown-content">
                <nav>
                  <ul>
                    <li> <a href="<%= '/students/' %>">Students</a> </li>
                    <li> <a href="<%= '/trainers/' %>">Trainers</a> </li>
                    <li> <a href="<%= '/courses/' %>">Courses</a> </li>
                    <li> <a href="<%= '/assignments/' %>">Assignments</a> </li>
                    <li> <a href="<%= '/assignmentStudent/' %>">Student's Assignment</a> </li>
                    <li> <a href="<%= '/students/addStudent/' %>">Add Student</a> </li>
                    <li> <a href="<%= '/trainers/addTrainer' %>">Add Trainer</a> </li>
                  </ul>
                </nav>
              </div>

            </div>

          </div>
        </div>

      </header>

      <main>
        <div class="main-items">

          <div class="head-title">
            <h2><%= title2 %></h2>
            <p class="title">The profile of <%= title2 %></p>
          </div>

          <div class="profile_panel">

            <div class="profile_info">
              <img src="https://loremflickr.com/250/250/kitten" alt="Profile Picture" >
            </div>

            <div class="profile_info">
                 
                <table class="info-data">
                  <caption> <h3>Personal Information</h3> </caption>
                  <tr>
                    <th class="info-titles"><p>First Name</p></th>
                    <td class="info"><span><%= personal[0].firstName %></span></td>
                  </tr>
                  <tr>
                    <th class="info-titles"><p>Last Name</p></th>
                    <td class="info"><span><%= personal[0].lastName %></span></td>
                  </tr>
                  <tr>
                    <th class="info-titles"><p>Subject</p></th>
                    <td class="info"><span><%= personal[0].subject %></span></td>
                  </tr>
                </table>
            </div>

            <div class="profile_info">
                 
                <table class="info-data">
                  <caption> <h3>Organic Information</h3> </caption>
                  
                  <tr>
                    <th class="info-titles"><p>Hours per Week</p></th>
                    <td class="info"><span><%= organic[0].hoursWeek %></span></td>
                  </tr>
                  <tr>
                    <th class="info-titles"><p>Hourly Wage</p></th>
                    <td class="info"><span><%= organic[0].hourlyWage %></span></td>
                  </tr>
                  <tr>
                    <th class="info-titles"><p>Contract Length</p></th>
                    <td class="info"><span><%= organic[0].contractLength %></span></td>
                  </tr>
                </table>
            </div>

            <div class="profile_info">
                
                <table class="info-data">
                  <caption> <h3>Additional Information</h3> </caption>

                  <tr>
                    <th class="info-titles"><p>Phone</p></th>
                    <td class="info"><span><%= additional[0].phone %></span></td>
                  </tr>
                  <tr>
                    <th class="info-titles"><p>E-mail</p></th>
                    <td class="info"><span><%= additional[0].email %></span></td>
                  </tr>
                  <tr>
                    <th class="info-titles"><p>Address</p></th>
                    <td class="info"><span><%= additional[0].address %></span></td>
                  </tr>
                </table>
            </div>
          
        </div>
      </main>

      <footer>
        <div class="test"></div>
      </footer>

    </div>

  <script type="text/javascript" src="/javascripts/screen.js"></script>

  </body>

</html>

